# Configuración para desarrollo local
# Copia este archivo como .env y completa los valores

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=tu-clave-secreta-super-segura-aqui
DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///mmr_local.db

# Cloudinary Configuration (Opcional para desarrollo)
CLOUDINARY_CLOUD_NAME=tu-cloud-name
CLOUDINARY_API_KEY=tu-api-key
CLOUDINARY_API_SECRET=tu-api-secret

# Render Configuration (Solo para producción)
RENDER=false
PORT=5000

# Paths Configuration
UPLOAD_FOLDER=processing/uploads
TEMPLATES_FOLDER=processing/product_templates
FONTS_FOLDER=static/assets/fonts

# Processing Configuration
MAX_FILE_SIZE=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,bmp

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://